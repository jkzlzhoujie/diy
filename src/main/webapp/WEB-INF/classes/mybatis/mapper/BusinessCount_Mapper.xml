<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.temobi.complex.entity.BusinessCount">
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" />
	<resultMap id="sql_resuleMap" type="BusinessCount">
			<id property="id" column="id" />
			<result property="materialId" column="materialId" />
			<result property="materialResId" column="materialResId" />
			<result property="business" column="business" />
			<result property="clientId" column="clientId" />
			<result property="type" column="type" />
			<result property="location" column="location" />
			<result property="createdWhen" column="created_when" />
	</resultMap>

	<sql id="sql_selectAll">
		select * from emoji_material_business_count
	</sql>

	<sql id="sql_where">
		<where>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(materialId)">and materialId = #{materialId}</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(clientId)">and clientId = #{clientId}</if>
        </where>
	</sql>
	
	<select id="findAll" resultMap="sql_resuleMap" useCache="false">
	<include refid="sql_selectAll"/>
	<include refid="sql_where"/>
	ORDER BY created_when desc
	</select>
	
	<select id="getById" parameterType="Long" resultMap="sql_resuleMap" useCache="false">
	<include refid="sql_selectAll"/>
	 where id=#{id}
	</select>
	
	<select id="findByMap" parameterType="map" resultMap="sql_resuleMap" useCache="false">
	<include refid="sql_selectAll"/>
	<include refid="sql_where"/>
	ORDER BY created_when desc
	</select>
	
	<select id="findByPage" parameterType="BusinessCount" resultMap="sql_resuleMap" useCache="false">
	<include refid="sql_selectAll"/>
	<include refid="sql_where"/>
	ORDER BY created_when desc limit #{limit} offset #{offset}
	</select>
	
	<select id="count" resultType="long" useCache="false">
		SELECT count(*) FROM emoji_material_business_count 
		<include refid="sql_where"/>
    </select>
    
	<insert id="insert" parameterType="BusinessCount" useGeneratedKeys="true" keyProperty="id">
	insert into emoji_material_business_count(materialId,business,clientId,type,materialResId,location,created_when)
	values(#{materialId},#{business},#{clientId},#{type},#{materialResId},#{location},now())
	</insert>
	
	<update id="update" parameterType="BusinessCount">
	  UPDATE emoji_material_business_count
        <set>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(materialId)"> materialId = #{materialId},</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(materialResId)"> materialResId = #{materialResId},</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(business)"> business = #{business},</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(clientId)"> clientId = #{clientId},</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(type)"> type = #{type},</if>
		 <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(location)"> location = #{location},</if>
		 </set>
        <where>
            <if test="@cn.temobi.core.util.StringUtil@isNotEmpty(id)">
                id=#{id}
            </if>
        </where>
	</update>
	
	<delete id="delete" parameterType="Long" flushCache="true">
		delete from emoji_material_business_count where id = #{id}
	</delete>
	
	<!-- 批量删除 -->
	<delete id="deleteByIds" parameterType="list" flushCache="true">
		DELETE FROM emoji_material_business_count
		<where>
				id in
				<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
					#{item}
        		</foreach>
		</where>
	</delete>
	
</mapper>
