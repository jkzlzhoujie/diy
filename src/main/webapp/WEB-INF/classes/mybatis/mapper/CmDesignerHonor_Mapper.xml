<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.temobi.complex.entity.CmDesignerHonor">
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" />
	<resultMap type="CmDesignerHonor" id="sql_resultMap">
		<id property="id" column="id" />
		<result property="designerId" column="designerId" />
		<result property="honorTime" column="honorTime" />
		<result property="honorText" column="honorText" />
		<result property="imageUrl" column="imageUrl" />
		<result property="imageUrlThumbnail" column="imageUrlThumbnail" />
		<result property="createTime" column="createTime" />
	</resultMap>
	
	<sql id="sql_selectAll">
		select * from cm_designer_honor
	</sql>
	
	<sql id="sql_where">
		<where>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(id)">and  id = #{id}</if>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(designerId)">and  designerId = #{designerId}</if>
		</where>
	</sql>
	
	<select id="count" resultType="Long" useCache="false">
		select count(1) from cm_designer_honor 
		<include refid="sql_where"></include>
	</select>
	
	<select id="getById" resultMap="sql_resultMap" useCache="false">
		<include refid="sql_selectAll"></include>
		where id=#{id}
	</select>
	
	<select id="findByPage" useCache="false"  resultMap="sql_resultMap">
		<include refid="sql_selectAll"></include>
		<include refid="sql_where"></include>
		<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(createTime)">and  createTime = #{createTime}</if>
		order by id desc
		limit #{limit} offset #{offset}
	</select>
	
	<select id="findByMap" parameterType="map" resultMap="sql_resultMap" useCache="false">
		<include refid="sql_selectAll"/>
		<include refid="sql_where"/>
	</select>
	
	<select id="findAll" useCache="false"  resultMap="sql_resultMap">
		<include refid="sql_selectAll"></include>
		<include refid="sql_where"></include>
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into cm_designer_honor(designerId,honorTime,honorText,imageUrl,imageUrlThumbnail,createTime) 
		 values(#{designerId},#{honorTime},#{honorText},#{imageUrl},#{imageUrlThumbnail},now())
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List">  
       	insert into cm_designer_honor(designerId,honorTime,honorText,imageUrl,imageUrlThumbnail,createTime) values  
       <foreach collection="list" item="item" index="index" separator=",">  
           (#{designerId},#{honorTime},#{honorText},#{imageUrl},#{imageUrlThumbnail},now())  
       </foreach>  
     </insert> 
	
	<update id="update" >
		update cm_designer_honor
		<set>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(honorTime)">honorTime=#{honorTime},</if>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(honorText)">honorText=#{honorText},</if>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(imageUrl)">imageUrl=#{imageUrl},</if>
			<if test="@cn.temobi.core.util.StringUtil@isNotEmpty(imageUrlThumbnail)">imageUrlThumbnail=#{imageUrlThumbnail},</if>
		</set>
		where id=#{id}
	</update>
	
	<delete id="delete" flushCache="true">
		delete from cm_designer_honor where id=#{id}
	</delete>
	
</mapper>